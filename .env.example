# AI Agents Platform - Environment Configuration

# ==========================================================================
# LLM API Keys
# ==========================================================================
ANTHROPIC_API_KEY=sk-ant-your-key-here
OPENAI_API_KEY=sk-your-key-here

# ==========================================================================
# Database Configuration
# ==========================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_agents
REDIS_URL=redis://localhost:6379

# ==========================================================================
# Open Policy Agent
# ==========================================================================
OPA_URL=http://localhost:8181

# ==========================================================================
# Application Configuration
# ==========================================================================
FLASK_ENV=development
LOG_LEVEL=INFO
PYTHONPATH=/app

# ==========================================================================
# Performance Tuning
# ==========================================================================
# Comma-separated list of agent IDs to prewarm
PREWARM_AGENTS=executive_summary_agent_001,meeting_notes_agent_002,email_triage_agent_014

# Maximum worker threads
MAX_WORKERS=4

# Worker timeout in seconds
WORKER_TIMEOUT=300

# ==========================================================================
# Security
# ==========================================================================
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production

# ==========================================================================
# Monitoring (Optional)
# ==========================================================================
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# ==========================================================================
# Third-Party Integrations (Optional)
# ==========================================================================
HUBSPOT_API_KEY=
SLACK_WEBHOOK_URL=
SENDGRID_API_KEY=

# ==========================================================================
# Feature Flags
# ==========================================================================
ENABLE_TEAM_COLLABORATION=true
ENABLE_WORKFLOWS=true
ENABLE_ANALYTICS=true

HASURA_ENDPOINT=https://localhost:8080/v1/graphql

HASURA_ADMIN_SECRET=replace-with-local-secret

AUTH_TOKEN=replace-with-local-token
